<Window x:Class="Simbirsoft.Windows.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simbirsoft.Windows"
        mc:Ignorable="d"
        Title="Редактирование" Height="450" Width="500"
        FontSize="27"
        FontFamily="PT Root"
         Background="White"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">
            <TextBlock Text="Фамилия" />
            <TextBox x:Name="Surname" Text="{Binding Surname}" />
            <TextBlock Text="Имя" />
            <TextBox x:Name="Name" Text="{Binding Name}" />
            <TextBlock Text="Отчество" />
            <TextBox x:Name="Patronymic" Text="{Binding Patronymic}"/>
            <TextBlock Text="Логин" />
            <TextBox x:Name="Login" Text="{Binding Login}"/>
            <TextBlock x:Name="textBlockPass" Text="Пароль" />
            <TextBox x:Name="Password" Text="{Binding Password}"/>

            <Button Content="Сохранить" Margin="0 15 0 0" Style="{StaticResource btnPrimary}" Click="Button_ClickSave"/>
        </StackPanel>
    </Grid>
</Window>
