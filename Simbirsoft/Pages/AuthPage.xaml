<Page x:Class="Simbirsoft.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Simbirsoft.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Background="#166CFB"
        Foreground="#F7F7F9"
        FontSize="22"
      FontFamily="PT Root"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Grid.Row="1" Width="400">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Resources/ss-logo-symbol-blue.png" Width="70" RenderOptions.BitmapScalingMode="HighQuality"  />
                <TextBlock Text="Авторизация" FontSize="40" VerticalAlignment="Center"  />
            </StackPanel>
            
            <TextBlock Text="Логин" />
            <TextBox Name="LoginTb" />

            <TextBlock Text="Пароль" />
            <PasswordBox Name="PassTb" />
            <Button Content="Войти" Click="Button_Click" Width="150" Margin="20" Style="{StaticResource btnPrimary}"/>
        </StackPanel>
    </Grid>
</Page>
